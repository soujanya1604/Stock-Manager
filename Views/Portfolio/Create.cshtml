@model PortfolioStock

<h2>Create Stock</h2>

<form method="post">
    <div class="form-group">
        <label for="Stock.Symbol">Stock Symbol</label>
        <select id="Stock.Symbol" name="Stock.Symbol" class="form-control" required>
            <option value="">-- Select Stock --</option>
            @foreach (var symbol in ViewBag.StockSymbols)
            {
                <option value="@symbol.Value">@symbol.Text</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="Date">Date</label>
        <input type="date" id="Date" name="Date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" min="@DateTime.Now.ToString("yyyy-MM-dd")" required />
    </div>

    <div class="form-group">
        <label for="OpeningPrice">Opening Price</label>
        <input type="number" id="OpeningPrice" name="OpeningPrice" class="form-control" value="@Model.OpeningPrice" required step="0.01" />
    </div>

    <div class="form-group">
        <label for="ClosingPrice">Closing Price</label>
        <input type="number" id="ClosingPrice" name="ClosingPrice" class="form-control" value="@Model.ClosingPrice" required step="0.01" />
    </div>

    <div class="form-group">
        <label for="HighPrice">High Price</label>
        <input type="number" id="HighPrice" name="HighPrice" class="form-control" value="@Model.HighPrice" required step="0.01" />
    </div>

    <div class="form-group">
        <label for="LowPrice">Low Price</label>
        <input type="number" id="LowPrice" name="LowPrice" class="form-control" value="@Model.LowPrice" required step="0.01" />
    </div>

    <div class="form-group">
        <label for="Quantity">Quantity</label>
        <input type="number" id="Quantity" name="Quantity" class="form-control" value="@Model.Quantity" required min="1" />
    </div>

    <button type="submit" class="btn btn-primary">Create Stock</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
</form>
