@model IEnumerable<Portfolio>

<h1>Your Portfolios</h1>

<table>
    <thead>
        <tr>
            <th>Portfolio Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var portfolio in Model)
        {
            <tr>
                <td>@portfolio.Name</td>
                <td>
                    <a href="@Url.Action("Edit", "Portfolio", new { id = portfolio.Id })">Edit Portfolio</a> |
                    <a href="@Url.Action("Delete", "Portfolio", new { id = portfolio.Id })">Delete Portfolio</a>
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <h4>Stocks in @portfolio.Name</h4>
                    <table>
                        <thead>
                            <tr>
                                <th>Stock Name</th>
                                <th>Quantity</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var portfolioStock in portfolio.PortfolioStocks)
                            {
                                <tr>
                                    <td>@portfolioStock.Stock.Name</td>
                                    <td>@portfolioStock.Quantity</td>
                                    <td>
                                        <a href="@Url.Action("Edit", "Stock", new { id = portfolioStock.Id })">Edit</a> |
                                        <a href="@Url.Action("Delete", "Stock", new { id = portfolioStock.Id })">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </td>
            </tr>
        }
    </tbody>
</table>
