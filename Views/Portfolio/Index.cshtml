@model IEnumerable<Portfolio>

<h1>Your Portfolios</h1>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var portfolio in Model)
        {
            <tr>
                <td>@portfolio.Name</td>
                <td>
                    <a href="@Url.Action("Edit", "Portfolio", new { id = portfolio.Id })">Edit</a> |
                    <a href="@Url.Action("Delete", "Portfolio", new { id = portfolio.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Portfolio")">Create New Portfolio</a>
