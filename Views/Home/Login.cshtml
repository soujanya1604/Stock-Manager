@model Stock_Manager.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<!-- Main Login Container -->
<div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="card shadow-lg" style="max-width: 400px; width: 100%;">
        <div class="card-body">
            <h2 class="text-center mb-4">Login to Your Account</h2>
            <form method="post">
                <div class="form-group">
                    <label for="UserName">Username</label>
                    <input type="text" class="form-control" id="UserName" name="UserName" required />
                </div>
                <div class="form-group mt-3">
                    <label for="Password">Password</label>
                    <input type="password" class="form-control" id="Password" name="Password" required />
                </div>

                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-primary w-100">Login</button>
                </div>
            </form>

            <!-- Links to Sign Up and Home -->
            <div class="mt-4 text-center">
                <p>Don't have an account? <a href="@Url.Action("Register", "Home")">Sign Up</a></p>
                <p><a href="@Url.Action("Index", "Home")">Go back to Home</a></p>
            </div>
        </div>
    </div>
</div>

<!-- Add styling for centering -->
<style>
    .card {
        border-radius: 10px;
    }

    .btn-primary {
        background-color: #3498db;
        border-color: #3498db;
    }

        .btn-primary:hover {
            background-color: #2980b9;
            border-color: #2980b9;
        }

    .form-group {
        margin-bottom: 20px;
    }

    .container {
        margin-top: 50px;
    }

    .text-center {
        text-align: center;
    }

    .mt-3 {
        margin-top: 15px;
    }

    .mt-4 {
        margin-top: 30px;
    }

    a {
        color: #3498db;
    }

        a:hover {
            color: #2980b9;
        }
</style>
