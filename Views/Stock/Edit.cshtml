@model PortfolioStock

<h1 class="mb-4" style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; color: #2c3e50;">
    Edit Stock: @Model.Stock.Name
</h1>

<form method="post" style="font-family: 'Segoe UI', sans-serif; color: #34495e;">
    <!-- Hidden fields -->
    <input type="hidden" name="symbol" value="@Model.Stock.Symbol" />
    <input type="hidden" name="date" value="@Model.Date.ToString("yyyy-MM-dd")" />

    <!-- Hidden Date Field -->
    <input type="hidden" class="form-control" id="Date" name="Date" value="@Model.Date.ToString("yyyy-MM-dd")" required />

    <!-- Opening Price -->
    <div class="form-group mb-3">
        <label for="OpeningPrice" class="form-label fw-bold">Opening Price</label>
        <input type="number" step="0.01" class="form-control" id="OpeningPrice" name="OpeningPrice" value="@Model.OpeningPrice" required />
    </div>

    <!-- Closing Price -->
    <div class="form-group mb-3">
        <label for="ClosingPrice" class="form-label fw-bold">Closing Price</label>
        <input type="number" step="0.01" class="form-control" id="ClosingPrice" name="ClosingPrice" value="@Model.ClosingPrice" required />
    </div>

    <!-- High Price -->
    <div class="form-group mb-3">
        <label for="HighPrice" class="form-label fw-bold">High Price</label>
        <input type="number" step="0.01" class="form-control" id="HighPrice" name="HighPrice" value="@Model.HighPrice" required />
    </div>

    <!-- Low Price -->
    <div class="form-group mb-3">
        <label for="LowPrice" class="form-label fw-bold">Low Price</label>
        <input type="number" step="0.01" class="form-control" id="LowPrice" name="LowPrice" value="@Model.LowPrice" required />
    </div>

    <!-- Quantity -->
    <div class="form-group mb-4">
        <label for="Quantity" class="form-label fw-bold">Quantity</label>
        <input type="number" class="form-control" id="Quantity" name="Quantity" value="@Model.Quantity" min="1" required />
    </div>

    <!-- Buttons -->
    <button type="submit" class="btn btn-success me-2" style="background-color: #27ae60; border-color: #27ae60;">
        💾 Save Changes
    </button>
    <a href="@Url.Action("GetStockPrice", "Stock", new { symbol = Model.Stock.Symbol })"
       class="btn btn-outline-secondary">
        ❌ Cancel
    </a>
</form>
