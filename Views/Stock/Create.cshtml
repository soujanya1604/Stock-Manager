@model PortfolioStock

<h1>Create New Stock: @Model.Stock.Name</h1>

<form method="post">
    <div class="form-group">
        <label for="symbol">Stock Symbol</label>
        <input type="text" class="form-control" id="symbol" name="Stock.Symbol" value="@Model.Stock.Symbol" required />
    </div>

    <div class="form-group">
        <label for="Date">Date</label>
        <input type="date" class="form-control" id="Date" name="Date" value="@Model.Date.ToString("yyyy-MM-dd")" required />
    </div>

    <div class="form-group">
        <label for="OpeningPrice">Opening Price</label>
        <input type="number" step="0.01" class="form-control" id="OpeningPrice" name="OpeningPrice" value="@Model.OpeningPrice" required />
    </div>

    <div class="form-group">
        <label for="ClosingPrice">Closing Price</label>
        <input type="number" step="0.01" class="form-control" id="ClosingPrice" name="ClosingPrice" value="@Model.ClosingPrice" required />
    </div>

    <div class="form-group">
        <label for="HighPrice">High Price</label>
        <input type="number" step="0.01" class="form-control" id="HighPrice" name="HighPrice" value="@Model.HighPrice" required />
    </div>

    <div class="form-group">
        <label for="LowPrice">Low Price</label>
        <input type="number" step="0.01" class="form-control" id="LowPrice" name="LowPrice" value="@Model.LowPrice" required />
    </div>

    <div class="form-group">
        <label for="Quantity">Quantity</label>
        <input type="number" class="form-control" id="Quantity" name="Quantity" value="@Model.Quantity" min="1" required />
    </div>

    <button type="submit" class="btn btn-primary">Create Stock</button>
    <a href="@Url.Action("GetStockPrice", "Stock", new { symbol = Model.Stock.Symbol })" class="btn btn-secondary">Cancel</a>
</form>
